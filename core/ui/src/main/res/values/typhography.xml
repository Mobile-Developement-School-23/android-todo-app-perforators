<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="OutlinedButton.LabelPrimary">
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="DefaultTextField" parent="Subhead">
        <item name="boxBackgroundColor">@color/back_secondary</item>
        <item name="boxStrokeColor">@color/back_secondary</item>
        <item name="hintTextColor">@color/label_tertiary</item>
        <item name="android:textColorHint">@color/label_tertiary</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="BaseText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="LargeTitle" parent="BaseText"><item name="android:textSize">32sp</item></style>
    <style name="Title" parent="BaseText"><item name="android:textSize">20sp</item></style>
    <style name="SmallBody" parent="BaseText"><item name="android:textSize">12sp</item></style>
    <style name="Button" parent="BaseText"><item name="android:textSize">14sp</item></style>
    <style name="Body" parent="BaseText"><item name="android:textSize">16sp</item></style>
    <style name="Subhead" parent="BaseText"><item name="android:textSize">14sp</item></style>

    <style name="LargeTitle.Bold"><item name="android:textStyle">bold</item></style>
    <style name="LargeTitle.Bold.LabelPrimary">
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="Body.LabelTertiary">
        <item name="android:textColor">@color/label_tertiary</item>
    </style>
    <style name="Body.Limited">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>
    <style name="Body.Limited.LabelPrimary">
        <item name="android:textColor">@color/label_primary</item>
    </style>
    <style name="Body.Bold"><item name="android:textStyle">bold</item></style>
    <style name="Body.Bold.LabelPrimary"><item name="android:textColor">@color/label_primary</item></style>

    <style name="SmallBody.LabelTertiary">
        <item name="android:textColor">@color/label_tertiary</item>
    </style>

    <style name="Subhead.Blue">
        <item name="android:textColor">@color/color_blue</item>
    </style>
    <style name="Subhead.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Subhead.Bold.Red">
        <item name="android:textColor">@color/color_red</item>
    </style>

    <style name="Button.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Button.Bold.Blue">
        <item name="android:textColor">@color/color_blue</item>
    </style>
</resources>